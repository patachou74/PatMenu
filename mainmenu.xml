        <action>PLUGIN mythwstation</action>
        <depends>mythwstation</depends>
    </button>

    <button>
        <type>WEBPAGE</type>
        <text>Web</text>
        <description>Browse the web</description>
        <action>PLUGIN mythbrowser</action>
        <depends>mythbrowser</depends>
    </button>

    <button>
        <type>NET_VIDEO_SEARCH</type>
        <text>Search Internet Video</text>
        <description>Search popular video sites</description>
        <action>JUMP MythNetSearch</action>
        <depends>mythnetvision</depends>
    </button>

    <button>
        <type>NET_VIDEO_TREE</type>
        <text>Browse Internet Video</text>
        <description>Browse highlights and entire sites</description>
        <action>JUMP MythNetTree</action>
        <depends>mythnetvision</depends>
    </button>
    
    <button>
        <type>MENU_EXTRAS</type>
        <text>Extras</text>
        <description>Setup, status information and import</description>
        <action>MENU extras_menu.xml</action>
    </button>
